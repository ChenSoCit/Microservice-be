<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user_service.mappers.RoleMapper">

    <select id="getRoleById" parameterType="int" resultType="com.example.user_service.models.Role">
        SELECT
            id
            ,name
        FROM roles
        WHERE id = #{id}
    </select>


</mapper>